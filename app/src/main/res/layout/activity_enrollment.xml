<!-- activity_enrollment.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editTextSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Subject"
        android:inputType="text"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/editTextCredit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Credits"
        android:inputType="number"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/btnAddSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Subject" />

    <Button
        android:id="@+id/btnViewSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Summary" />

    <TextView
        android:id="@+id/textViewTotalCredits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Credits: 0"
        android:textSize="18sp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:backgroundTint="@color/design_default_color_error"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp" />
</LinearLayout>
